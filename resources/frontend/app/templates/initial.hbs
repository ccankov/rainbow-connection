<table>
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Favorite Color</th>
      <th>Connections</th>
    </tr>
  </thead>
    {{#each model as |user|}}
    <tr>
      <td>
        {{#link-to 'user' user}}
          {{user.fullName}}
        {{/link-to}}
      </td>
      <td style={{user.myColor}}>{{user.favorite-color}}</td>
      <td>
        {{#each user.connections as |connection|}}
          {{#link-to 'user' connection.id}}
            {{connection.firstname}} {{connection.lastname}}
          {{/link-to}},
        {{/each}}
      </td>
    </tr>
  {{/each}}
  <tr>
    <td colspan="3">
      <!-- Triggers infinite scrolling when in view -->
      {{infinity-loader infinityModel=model loadingText="Loading..." loadedText="Loaded!"}}
    </td>
  </tr>
</table>
