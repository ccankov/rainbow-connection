<header>
  <h2>{{model.fullName}}</h2>
  <h3>Favorite Color:</h3>
  <select style={{model.myColor}} {{action 'change' on='change'}}>
    {{#each color as |item|}}
      <option value={{read-path item optionValuePath}}>
        {{read-path item optionLabelPath}}
      </option>
    {{/each}}
  </select>
  <span style={{model.myColor}}>{{model.favorite-color}}</span>
</header>


<table>
  <thead>
    <h3>Connections:</h3>
    <tr>
      <th>Full Name</th>
      <th>Favorite Color</th>
      <th class="small">Remove Connection</th>
    </tr>
  </thead>
    {{#each model.connections as |user|}}
    <tr>
      <td>
        {{#link-to 'user' user.id}}
          {{user.firstname}} {{user.lastname}}
        {{/link-to}}
      </td>
      <td style="color: {{user.favorite-color}}">{{user.favorite-color}}</td>
      <td class="small">
        <button type="button" {{action "deleteConnection" user.id}}>Remove</button>
      </td>
    </tr>
  {{/each}}
</table>
