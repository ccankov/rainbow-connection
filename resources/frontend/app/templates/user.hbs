<h1>Name: {{model.fullName}}</h1>
<h2>Favorite Color:
  <span style={{model.myColor}}>{{model.favorite-color}}</span>
</h2>
<h3>Connections:</h3>
<table>
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Favorite Color</th>
      <th class="small">Remove Connection</th>
    </tr>
  </thead>
    {{#each model.connections as |user|}}
    <tr>
      <td>
        {{#link-to 'user' user.id}}
          {{user.firstname}} {{user.lastname}}
        {{/link-to}}
      </td>
      <td style="color: {{user.favorite-color}}">{{user.favorite-color}}</td>
      <td class="small">
        <button type="button" {{action "deleteConnection" user.id}}>Remove</button>
      </td>
    </tr>
  {{/each}}
</table>
